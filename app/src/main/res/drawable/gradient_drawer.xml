<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
    <gradient
        android:type="linear"
        android:startColor="@color/gradient_drawer_dark"
        android:endColor="@color/gradient_drawer_light"
        android:angle="45"
        android:centerX="0.6"
        android:centerY="0.3"

        />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/drawer_tint"
                android:endColor="@color/drawer_tint"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
