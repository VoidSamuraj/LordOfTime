<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/gray"/>
            <size android:height="36dp" android:width="36dp"/>
            <stroke android:color="@color/dark_gray" android:width="1dp"/>
        </shape>
    </item>
    <item  android:state_checked="false" >
        <shape android:shape="oval">
            <solid android:color="@color/thumb_unselected"/>
            <size android:height="36dp" android:width="36dp"/>
            <stroke android:color="@color/switch_thumb_stroke_unselected" android:width="1dp"/>
        </shape>
    </item>
    <item  android:state_checked="true" >
        <shape android:shape="oval">
            <solid android:color="@color/thumb_selected"/>
            <size android:height="36dp" android:width="36dp"/>
            <stroke android:color="@color/switch_thumb_stroke_selected" android:width="1dp"/>
        </shape>
    </item>

</selector>