<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.LordOfTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowBackground">@drawable/gradient_background</item>

        <!-- sets toggle button -->
        <item name="colorPrimary">#1976D2</item>        <!-- D3AD25-->
        <item name="colorPrimaryVariant">@color/bar_dark</item>
        <item name="colorPrimaryDark">@color/bar_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/task_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LordOfTime.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LordOfTime.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Theme.LordOfTime.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

    </style>

</resources>