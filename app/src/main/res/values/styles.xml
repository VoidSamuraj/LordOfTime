<resources>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="Widget.Theme.LordOfTime.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="MyStyle.CardView" parent="CardView.Light">
        <item name="android:background">@drawable/gradient_background</item>
    </style>
    <style name="MyStyle.Background" parent="android:Theme">
        <item name="android:background">@drawable/image_gradient_bg</item>
    </style>
    <style name="MyStyle.Background2" parent="android:Theme">
        <item name="android:background">@drawable/gradient_background</item>
    </style>
    <style name="MyStyle.BackgroundWorking" parent="android:Theme">
        <item name="android:background">@drawable/gradient_work_recycle_element</item>
    </style>
    <!--
    gradient_work_recycle_element
    -->
    <style name="ToggleButtonText"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>

    </style>

    <style name="ToggleButtonWithText" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AuthLabel" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>

















