<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        tools:viewBindingIgnore="true">

        <View
            android:id="@+id/chart_color_block"
            android:layout_width="@dimen/chart_line_height"
            android:layout_height="@dimen/chart_line_height"
            android:layout_gravity="center"
            tools:background="@color/blue_gray"/>

        <TextView
            android:id="@+id/chart_text_block"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chart_line_height"
            android:layout_gravity="center"
            android:paddingStart="5dp"
            android:textSize="@dimen/chart_description"
            tools:text="test"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>