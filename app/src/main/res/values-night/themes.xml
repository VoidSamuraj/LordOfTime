<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.LordOfTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- sets toggle button -->

        <item name="colorPrimary">#AEAEAE</item>
        <item name="colorPrimaryVariant">@color/bar_dark</item>
        <item name="colorPrimaryDark">@color/working_progress_circle</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <item name="colorAccent">@color/lemon</item>
        <item name="android:textColor">@color/text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.LordOfTime.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.LordOfTime.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LordOfTime.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
